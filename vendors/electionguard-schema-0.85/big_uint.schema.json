{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "big_uint.schema.json",
    "title": "Big uint",
    "description": "A big unsigned integer, which can be given as a string or a number, starting from zero.",
    "oneOf": [
        {
            "type": "string",
            "pattern": "^[0-9]+$"
        },
        {
            "type": "integer",
            "minimum": 0
        }
    ]
  }
  